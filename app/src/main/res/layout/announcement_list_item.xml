<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/plan_item_bg"
    android:clickable="true"
    android:id="@+id/ll_announcement_item"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_announcement_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2018-08-08"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/text_gray_6"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/tv_announcement_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_gray_3"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_announcement_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_gray_6"
            android:layout_marginTop="5dp"
            />


    </LinearLayout>


</LinearLayout>