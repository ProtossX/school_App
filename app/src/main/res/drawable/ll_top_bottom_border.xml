<?xml version="1.0" encoding="utf-8"?>
<!-- 左右没有分割线，有点击效果 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="false" >
        <layer-list>
            <item
                android:left="-1dp"
                android:right="-1dp"
                >
                <shape >
                    <solid android:color="@color/white"/>
                    <stroke android:width="0.5dp"
                        android:color="@color/DDDDDD"
                        />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true" >
        <layer-list
            android:left="-1dp"
            android:right="-1dp"
            >
            <item >
                <shape >
                    <solid android:color="#F0F4F5"/>
                    <stroke android:width="0.5dp"
                        android:color="@color/DDDDDD"
                        />
                </shape>
            </item>
        </layer-list>

    </item>

</selector>